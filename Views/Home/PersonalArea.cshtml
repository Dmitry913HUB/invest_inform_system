
@{
    ViewBag.Title = "PersonalArea";
}

<div class="mainTable">
    <h3>Счета</h3>
    <table>
        <tr>
            <td>Id</td>
            <td>RUB</td>
            <td>USD</td>
            <td>EUR</td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Score)
        {
    <tr>
        <td>@b.Id</td>
        <td>@b.RUB</td>
        <td>@b.USD</td>
        <td>@b.EUR</td>
        <td>
            <button><a href="/Home/Replenishment/@b.Id">Пополнить</a></button>
        </td>
        <td>
            <button><a href="/Home/Transfer/@b.Id">Перевести</a></button>
        </td>
    </tr>
        }
    </table>
</div>

<div class="mainTable">
    <h3>Мои Акции</h3>
    <table>
        <tr>
            <td>Id</td>
            <td>Название</td>
            <td>Цена</td>
            <td>Количество Акций</td>
            <td>Дата покупки</td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.RegisterShares)
        {
    <tr>
        <td>@b.Id</td>
        <td>@b.Name</td>
        <td>@b.Cost</td>
        <td>@b.QuantityLot</td>
        <td>@b.Date</td>
        <td>
            <button><a href="/Home/IssueSell/@b.Id">Продать</a></button>
        </td>
    </tr>
        }
    </table>
</div>



