
@{
    ViewBag.Title = "IssueSell";
}

    <div>
        <h3>Форма продажи акции</h3>
        <form method="post">
            <input type="hidden" value="@ViewBag.Id" name="Id" />
            <table>
                <tr>
                    <td>Название</td>
                    <td>@ViewBag.Name</td>
                </tr>
                <tr>
                    <td>Цена</td>
                    <td>@ViewBag.Cost</td>
                </tr>
                <tr>
                <tr>
                    <td>Тип валюты</td>
                    <td>@ViewBag.TypeVal</td>
                </tr>
                <tr>
                    <td>Количество купленных акций</td>
                    <td>@ViewBag.QuantityLot</td>
                </tr>
                <tr>
                    <td>Минимальный объем лота бля продажи</td>
                    <td>@ViewBag.Lot</td>
                </tr>
                <tr>
                    <td>
                        <p>Введие количество лотов для продажи :</p>
                    </td>
                    <td>
                        <input type="number" name="QuantityLot" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Продать" />
                    </td>
                    <td></td>
                </tr>
            </table>
            </form>
    </div>


